<h1>Create new user</h1>

<% if @user.errors.any? %>
    <div>
      <h2><%= pluralize(@user.errors.count, "Error") %> in the form made it impossible to save:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @user do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div>
      <%= f.submit "Register" %>
    </div>
<% end %>

<%= link_to "Back to login", root_path %>